---
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | escape }}",
      "chapter"  : "{{ post.chapter }}",
      "url"      : "{{ site.baseurl }}#page-{{ post.bookpage }}",
      "date"     : "{{ post.date }}",
      "content"  : "{{ post.content | strip_html | replace: "\n", " " | replace: ".", " " | replace: ":", " " | strip_newlines }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
